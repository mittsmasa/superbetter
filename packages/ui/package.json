{
  "name": "@superbetter/ui",
  "version": "0.1.0",
  "description": "SuperBetter UI component library",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./preset": {
      "types": "./src/preset.ts",
      "import": "./dist/preset.js",
      "require": "./dist/preset.js",
      "default": "./dist/preset.js"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.js"
    },
    "./icons": {
      "types": "./src/components/icons/index.ts",
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.js",
      "default": "./dist/icons/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "panda codegen && pnpm build",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6007 --no-version-updates",
    "storybook:build": "storybook build --quiet",
    "test:visual": "vitest run --project=vrt --reporter=default --reporter=@superbetter/vrt/reporter",
    "test:visual:update": "vitest run --update --project=vrt",
    "test:visual:ui": "vitest --ui --project=vrt"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@floating-ui/react": "catalog:",
    "motion": "catalog:"
  },
  "devDependencies": {
    "@pandacss/dev": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/react-vite": "10.1.11",
    "@superbetter/vrt": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "playwright": "catalog:",
    "storybook": "catalog:",
    "tsup": "8.5.1",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "author": "SuperBetter Team",
  "license": "UNLICENSED",
  "private": true
}
